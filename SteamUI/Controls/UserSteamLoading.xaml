<UserControl x:Class="SteamUI.Controls.UserSteamLoading"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SteamUI.Controls"
             xmlns:icons="clr-namespace:SteamUI.Controls.Icons"
             xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
             mc:Ignorable="d">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ui:ThemesDictionary Theme="Dark" />
                <ui:ControlsDictionary />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>

    <Viewbox>
        <Grid>
            <icons:IconSteamNormal x:Name="icon" Width="50" Height="50" IconColor="White" RenderTransformOrigin="0.5,0.5">
                <icons:IconSteamNormal.RenderTransform>
                    <ScaleTransform ScaleX="1" ScaleY="1"/>
                </icons:IconSteamNormal.RenderTransform>

            </icons:IconSteamNormal>
            <ui:ProgressRing IsIndeterminate="True" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"/>
        </Grid>
    </Viewbox>
</UserControl>
