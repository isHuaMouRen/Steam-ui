<UserControl x:Class="SteamUI.Controls.UserSteamLoading"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SteamUI.Controls"
             xmlns:icons="clr-namespace:SteamUI.Controls.Icons"
             xmlns:ui="http://schemas.modernwpf.com/2019"
             mc:Ignorable="d">
    <Viewbox>
        <Grid>
            <icons:IconSteamNormal x:Name="icon" Width="50" Height="50" IconColor="White" RenderTransformOrigin="0.5,0.5">
                <icons:IconSteamNormal.RenderTransform>
                    <ScaleTransform ScaleX="0.8 " ScaleY="0.8"/>
                </icons:IconSteamNormal.RenderTransform>

            </icons:IconSteamNormal>
            <ui:ProgressRing IsActive="True" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"/>
        </Grid>
    </Viewbox>
</UserControl>
